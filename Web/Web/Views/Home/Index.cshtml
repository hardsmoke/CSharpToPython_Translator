@{
    ViewData["Title"] = "Translator";
}

<div class="text-center">
    <h1 class="display-4">C# To Python Translator</h1>
</div>

<form method="POST" id="csharpCode" class="text-center display-4">
    <button type="submit" class="btn btn-outline-primary" style="text-align:center;">Translate</button>
</form>

<div style="text-align:center;">
    <div class="form-group" style="display: inline-block; width:49%;">
        <label for="csharptextarea">C#</label>
        <textarea class="form-control" id="csharptextarea" rows="5" style="height: 300px;" name="csharpCode" form="csharpCode">@ViewData["csharpCode"]</textarea>
    </div>
    <div class="form-group" style="display: inline-block; width:49%;">
        <label for="pythontextarea">Python</label>
        <textarea class="form-control" id="pythontextarea" rows="5" style="height: 300px;" name="pythonCode">@ViewData["pythonCode"]</textarea>
    </div>
</div>

<div class="form-group" width:100%; text-align:center;">
    <textarea class="form-control" id="errorlogtextarea" rows="5" style="height: 300px;" name="errorlogtextarea">@ViewData["errorLog"]</textarea>
</div>
